<?xml version="1.0" encoding="utf-8"?>
<xsd:schema xmlns:l="http://example.com/launchpads" elementFormDefault="qualified" targetNamespace="http://example.com/launchpads" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <xsd:element name="launchpads">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="launchpad" maxOccurs="unbounded" minOccurs="0">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element name="name" type="xsd:string" />
            </xsd:sequence>
            <xsd:attribute name="launchpad_id" use="required" type="l:launchpad_pattern">
            </xsd:attribute>
            <xsd:attribute name="location_ref" use="required" type="l:location_pattern">
            </xsd:attribute>
          </xsd:complexType>
        </xsd:element>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
  <xsd:simpleType name="launchpad_pattern">
    <xsd:restriction base="xsd:string">
      <xsd:pattern value="lp_[0-9]+" />
    </xsd:restriction>
  </xsd:simpleType>
  <xsd:simpleType name="location_pattern">
    <xsd:restriction base="xsd:string">
      <xsd:pattern value="loc_[0-9]+" />
    </xsd:restriction>
  </xsd:simpleType>
</xsd:schema>